<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
   <settings>
      <setting name="logImpl" value="STDOUT_LOGGING"/>
   </settings>
   <typeAliases>
      <typeAlias alias = "ArtTag" type = "objects.ArtTag"/>  
      <typeAlias alias = "Artwork" type = "objects.Artwork"/>
      <typeAlias alias = "Forum" type = "objects.Forum"/>
      <typeAlias alias = "Gallery" type = "objects.Gallery"/>
      <typeAlias alias = "Post" type = "objects.Post"/>
      <typeAlias alias = "StaffRole" type = "objects.StaffRole"/>
      <typeAlias alias = "Thread" type = "objects.Thread"/>
   	  <typeAlias alias = "User" type = "objects.User"/>
   </typeAliases>

   <typeHandlers>
      <typeHandler handler="handlers.LongArrayTypeHandler"/>
      <typeHandler handler="handlers.PGObjectArrayTypeHandler"/>      
      <typeHandler handler="handlers.PGObjectTypeHandler"/>
   </typeHandlers>

   <environments default = "development">
      <environment id = "development">
         <transactionManager type = "MANAGED"/> 
			
         <dataSource type = "POOLED">
            <property name = "driver" value = "org.postgresql.Driver"/>
            <property name = "url" value = "jdbc:postgresql://localhost:5432/collective?autoReconnect=true&amp;tcpKeepAlive=true"/>
            <property name = "username" value = "postgres"/>
            <property name = "password" value = "bradley01"/>
         </dataSource>   
         
      </environment>
   </environments>
	
	
	
   <mappers>
      <mapper resource = "db_map/ArtTag.xml"/>
   	  <mapper resource = "db_map/Artwork.xml"/>
   	  <mapper resource = "db_map/Forum.xml"/>
   	  <mapper resource = "db_map/Gallery.xml"/>      
      <mapper resource = "db_map/Post.xml"/>   	 
      <mapper resource = "db_map/StaffRole.xml"/> 
      <mapper resource = "db_map/Thread.xml"/> 
   	  <mapper resource = "db_map/User.xml"/>
   </mappers>
   
</configuration>